{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "dist/**"
      ],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
      ]
    },
    "dev": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "release": {
      "dependsOn": [
        "test"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "publish": {
      "dependsOn": [
        "test"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "version": {
      "dependsOn": [
        "test"
      ],
      "outputs": [
        "pnpm-lock.yaml"
      ]
    }
  }
}
